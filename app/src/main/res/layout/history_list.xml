<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#00ffffff"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00f9faff">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:id="@+id/his_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/load_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/wrap_text"
            android:textColor="#2b92ff"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/his_image"
            android:layout_toEndOf="@+id/his_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:textDirection="anyRtl"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/text_recognized"
            android:textColor="#ffffff"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:textSize="20dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/wrap_text"
            android:layout_toEndOf="@+id/wrap_text" />

    </RelativeLayout>
</LinearLayout>